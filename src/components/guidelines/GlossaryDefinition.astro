---
import { render, type CollectionEntry } from "astro:content";

import { computeTermTitle } from "@/lib/guidelines";

interface Props {
  termEntry: CollectionEntry<"terms">;
}

const { termEntry } = Astro.props;
const { status, synonyms, hideDefinition } = termEntry.data;
const { Content } = await render(termEntry);
---

<dt data-status={status}>
  <dfn data-lt={synonyms ? synonyms.join("|") : undefined}  class={hideDefinition ? "lint-ignore" : undefined}>{computeTermTitle(termEntry)}</dfn>
</dt>
<dd><Content /></dd>
