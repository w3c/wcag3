---
import { render, type CollectionEntry } from "astro:content";

import { computeTitle } from "@/lib/guidelines";

import EditLink from "../editing/EditLink.astro";

interface Props {
  termEntry: CollectionEntry<"terms">;
}

const { termEntry } = Astro.props;
const { status, synonyms } = termEntry.data;
const { Content } = await render(termEntry);
---

<dt data-status={status}>
  <dfn data-lt={synonyms ? synonyms.join("|") : undefined}>{computeTitle(termEntry)}</dfn>
</dt>
<dd>
  <Content />
  <EditLink entry={termEntry} />
</dd>
